---
/**
 * Auth callback page
 * Handles the magic link redirect from Supabase
 * Supabase automatically processes the session from the URL
 * Then redirects to the main calendar page
 */
import '../../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Authenticating...</title>
  </head>
  <body>
    <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-900 dark:to-gray-800">
      <div class="text-center">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-purple-600 mb-4"></div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Authenticating...</h1>
        <p class="text-gray-600 dark:text-gray-300 mt-2">Please wait while we log you in</p>
      </div>
    </div>

    <script>
      import { supabase } from '../../lib/supabase';
      import { isDemoMode } from '../../lib/featureFlags';

      async function handleCallback() {
        // In demo mode, just redirect to main page
        if (isDemoMode()) {
          window.location.href = '/';
          return;
        }

        if (!supabase) {
          console.error('Supabase is not configured');
          window.location.href = '/login?error=config';
          return;
        }

        try {
          // Supabase automatically handles the session from the URL
          // We just need to verify the user is authenticated
          const { data: { session }, error } = await supabase.auth.getSession();

          if (error) {
            console.error('Auth error:', error);
            window.location.href = '/login?error=auth';
            return;
          }

          if (!session) {
            console.error('No session found');
            window.location.href = '/login?error=session';
            return;
          }

          // Successfully authenticated, redirect to calendar
          window.location.href = '/';
        } catch (error) {
          console.error('Callback error:', error);
          window.location.href = '/login?error=unknown';
        }
      }

      // Run the callback handler
      handleCallback();
    </script>
  </body>
</html>
